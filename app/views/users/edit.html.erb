<h1>プロフィール編集</h1>

<hr />

<div class="row">
  <div class="col-md-6 col-md-offset-3">

      <%= form_for(@user) do |f| %>
      
          <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

          <br />
          <%= f.label "ニックネーム" %>
          <%= f.text_field :nickname, :size=>"30" , class: 'form-control'%>

          <%= f.label "Eメール" %>
          <%= f.text_field :email, :size=>"40", class: 'form-control'%>

          <%= f.label "パスワード" %>
          <%= f.password_field :password, :size=>"40", class: 'form-control'%>

          <%= f.submit "確　定", class:"btn btn-sm btn-primary" %>
      
      <% end %>
    
  </div>
</div>

<hr />