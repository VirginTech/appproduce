        <% if @image_size_04[0] > @image_size_04[1] %>
          <%= image_tag @product.img_screenshot_04.url,:size => '568x320'  %>
        <% else %>
          <%= image_tag @product.img_screenshot_04.url,:size => '320x568'  %>
        <% end %>
      </div>
          
      <%= f.label "スクリーンショット 5" %><br />
