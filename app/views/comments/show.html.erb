<% if user_logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      
      <%= link_to "お気に入り一覧", @user %><br />
      <%= link_to "コメント管理", comment_path(@user) %>
      
    </aside>
    
    <!-- お気に入り表示 -->
    <div class="col-md-8">
      <h3><%= @user.nickname %>さんのコメント</h3>
      <hr />
      <% @comments.each do |comment| %>
        <%= render partial: 'comments/comment', locals: { comment: comment } %>
      <% end %>
      
    </div>
  </div>
<% end %>
      
      
